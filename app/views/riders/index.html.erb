<p id="notice"><%= notice %></p>

<h1>Riders</h1>

<table>
  <thead>
    <tr>
      <th>Parade</th>
      <th>Float</th>
      <th>Side</th>
      <th>Level</th>
      <th>Position</th>
      <th>Userid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @riders.each do |rider| %>
      <tr>
        <td><%= rider.parade %></td>
        <td><%= rider.float %></td>
        <td><%= rider.side %></td>
        <td><%= rider.level %></td>
        <td><%= rider.position %></td>
        <td><%= rider.userid %></td>
        <td><%= link_to 'Show', rider %></td>
        <td><%= link_to 'Edit', edit_rider_path(rider) %></td>
        <td><%= link_to 'Destroy', rider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

