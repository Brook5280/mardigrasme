<p id="notice"><%= notice %></p>

<h1>Are you still at:</h1>
<p> <%= current_user.id %></p>
<table>
  <thead>
    <tr>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.street %></td>
        <td><%= location.city %></td>
        <td><%= location.state %></td>
        <td><%= link_to 'Show on the map', location %></td>
        <td><%= link_to 'Different Location', edit_location_path(location) %></td>
        <td><%= link_to 'Delete this one', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>
